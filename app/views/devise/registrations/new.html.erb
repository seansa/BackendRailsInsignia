<div class="row center-xs">
  <div class="col-xs-8 col-md-6">
    <div class="box text-left">
      <h2>Crear cuenta</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <% if session[:omniauth_errors] %>
          <div class="flash"> <%= session[:omniauth_errors] %> </div>
        <% end %>

        <div class="field">
          <%= f.label :email, "Correo electronico" %><br />
          <%= f.email_field :email, autofocus: true, class:"form-control"%>
        </div>

        <div class="field">
          <%= f.label :password, "Contraseña" %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirmar contraseña"%><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Crear cuenta", class:"btn white be-red"%>
        </div>
      <% end %>
         
    </div>
  </div>
</div>

