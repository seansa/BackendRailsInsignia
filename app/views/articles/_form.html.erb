<%= form_for(@article) do |f|%>
	<% @article.errors.full_messages.each do |messages| %>
		<div class="be-red white top-space">
			* <%= messages %>
		</div>
	<% end %>
	<h1> <%= name %> articulo</h1>
	<div class="field">
		<%= f.text_field :title, placeholder: "Titulo", class:'form-control' %>
	</div>
	<div class="field">
		<%= f.text_area :body, placeholder: "Escribe aqui el articulo", class:'tamanio form-control form-height' %>
	</div>
	<div class="btn no-margin">
		<%= f.submit "Guardar", class:'btn be-red white' %>
	</div>
<% end %>